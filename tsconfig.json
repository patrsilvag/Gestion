{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"strict": true
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": [
		"node_modules",
		"dist",

		// ðŸ‘‡ ESTA ES LA PARTE IMPORTANTE: excluimos mÃ³dulos WIP con errores
		"src/admin",
		"src/dashboard",
		"src/documentos",
		"src/maquila",
		"src/scoring",
		"src/layouts/layoutsAppLayout.tsx",
		"src/modules/compromisos/CommitmentForm.tsx"
	]
}
