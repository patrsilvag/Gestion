{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": { "@/*": ["src/*"] },
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"strict": true,
		"skipLibCheck": true,
		"noEmit": true,
		"isolatedModules": true
	},
	"include": ["src", "vite.config.ts", "index.html"]
}
